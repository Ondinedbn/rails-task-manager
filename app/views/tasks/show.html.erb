<h2><%= @task.name %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>

<%= link_to 'Edit this task', edit_task_path(@task)%>
<%= link_to "Delete #{@task.name}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Delete #{@task.name}?" } %>
<%= link_to 'Back to tasks', tasks_path%>
